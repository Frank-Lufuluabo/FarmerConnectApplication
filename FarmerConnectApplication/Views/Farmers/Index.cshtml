@model IEnumerable<FarmerConnectApplication.Models.Farmer>

@{
    ViewData["Title"] = "All Farmers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
                <td>@farmer.Location</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success mt-3" asp-action="Create">Add New Farmer</a>
